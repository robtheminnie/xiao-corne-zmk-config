/ {
    chosen {
        zmk,keyboard = &kscan0;
    };
};

/* Disable the keyboard matrix (dongle has no keys) */
&kscan0 {
    status = "disabled";
};

/* Enable USB HID for dongle mode */
&usbd {
    status = "okay";
};

